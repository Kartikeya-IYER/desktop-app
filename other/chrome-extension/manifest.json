{
  "name": "IVPN",
  "description": "Extension shows current status of VPN connection",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": ["storage"],

  "browser_action": {
    "default_icon": "/images/disconnected.png", // optional
    "default_title": "IVPN: Disconnected",      // optional, shown in tooltip
    "default_popup": "popup.html"               // optional
  }
}
